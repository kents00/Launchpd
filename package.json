{
    "name": "launchpd",
    "version": "0.1.12",
    "description": "Deploy static sites instantly to a live URL",
    "type": "module",
    "bin": {
        "launchpd": "./bin/cli.js"
    },
    "main": "./src/commands/index.js",
    "exports": {
        ".": "./src/commands/index.js",
        "./utils": "./src/utils/index.js"
    },
    "files": [
        "bin",
        "src"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "start": "node bin/cli.js",
        "dev": "node bin/cli.js deploy ../examples/test-site",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src bin --ext .js",
        "lint:fix": "eslint src bin --ext .js --fix",
        "prepublishOnly": "npm run lint && npm run test"
    },
    "keywords": [
        "static",
        "hosting",
        "deploy",
        "cli",
        "cloudflare",
        "cdn",
        "website",
        "publish"
    ],
    "author": "Kent John Edoloverio",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kents00/launchpd.git",
        "directory": "cli"
    },
    "bugs": {
        "url": "https://github.com/kents00/launchpd/issues"
    },
    "homepage": "https://launchpd.cloud",
    "dependencies": {
        "chalk": "^5.4.0",
        "commander": "^14.0.0",
        "mime-types": "^2.1.35",
        "nanoid": "^5.1.0",
        "ora": "^8.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@vitest/coverage-v8": "^2.1.0",
        "eslint": "^9.0.0",
        "vitest": "^2.1.0"
    }
}